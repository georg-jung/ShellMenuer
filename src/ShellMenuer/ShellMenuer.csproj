<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>ShellMenuer</PackageId>
    <Authors>Georg Jung</Authors>
    <!-- enable as soon as possible
    <EnablePackageValidation>true</EnablePackageValidation>
    <PackageValidationBaselineVersion>0.1.3</PackageValidationBaselineVersion>
    -->
  </PropertyGroup>

  <PropertyGroup>
    <PackageProjectUrl>https://github.com/georg-jung/ShellMenuer</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageDescription>Easily create Windows Explorer Shell Context Menu items using .Net. Does not require elevation, installation or COM server registration. Supports cascading menus.</PackageDescription>
    <PackageTags>shell;explorer;menu;context-menu;windows-explorer;cascading;file-explorer;registry</PackageTags>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
    <PackageReference Include="Microsoft.Windows.CsWin32" Version="0.2.104-beta" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Windows.SDK.Win32Metadata" Version="37.0.34-preview" />
  </ItemGroup>

</Project>
